<Project>
  <PropertyGroup Condition="'$(MSBuildSummaryFilesTaskAssembly)' == ''">
    <MSBuildSummaryFilesTaskAssembly Condition="'$(MSBuildRuntimeType)' == 'Full'">$(MSBuildThisFileDirectory)net472\MSBuildSummaryFiles.Tasks.dll</MSBuildSummaryFilesTaskAssembly>
    <MSBuildSummaryFilesTaskAssembly Condition="'$(MSBuildRuntimeType)' == 'Core'">$(MSBuildThisFileDirectory)netstandard2.0\MSBuildSummaryFiles.Tasks.dll</MSBuildSummaryFilesTaskAssembly>
  </PropertyGroup>
  
  <UsingTask TaskName="WriteTargetFrameworkSummaryFile" AssemblyFile="$(MSBuildSummaryFilesTaskAssembly)" />

  <UsingTask TaskName="WriteBuildSummaryFile" AssemblyFile="$(MSBuildSummaryFilesTaskAssembly)" />
</Project>