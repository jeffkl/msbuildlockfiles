<Project>
  <PropertyGroup Condition="'$(MSBuildLockFilesTaskAssembly)' == ''">
    <MSBuildLockFilesTaskAssembly Condition="'$(MSBuildRuntimeType)' == 'Full'">$(MSBuildThisFileDirectory)net472\MSBuildLockFiles.Tasks.dll</MSBuildLockFilesTaskAssembly>
    <MSBuildLockFilesTaskAssembly Condition="'$(MSBuildRuntimeType)' == 'Core'">$(MSBuildThisFileDirectory)netstandard2.0\MSBuildLockFiles.Tasks.dll</MSBuildLockFilesTaskAssembly>
  </PropertyGroup>
  
  <UsingTask TaskName="WriteTargetFrameworkLockFile" AssemblyFile="$(MSBuildLockFilesTaskAssembly)" />

  <UsingTask TaskName="WriteBuildLockFile" AssemblyFile="$(MSBuildLockFilesTaskAssembly)" />
</Project>